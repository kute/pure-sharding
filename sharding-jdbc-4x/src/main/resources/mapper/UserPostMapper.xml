<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kute.sharding.jdbc4x.mapper.UserPostMapper">

    <resultMap id="BaseResultMap" type="com.kute.sharding.jdbc4x.entity.UserPost">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
    </resultMap>
    <insert id="add" parameterType="com.kute.sharding.jdbc4x.entity.UserPost"
            keyProperty="id" useGeneratedKeys="true">
        insert into user_post(`name`) values(#{name})
    </insert>

    <select id="findById" resultType="com.kute.sharding.jdbc4x.entity.UserPost">
        select id, `name` from user_post where id=#{id}
    </select>

</mapper>